<div class="plant_info">
  <div class="task-title-card follow-up-card plant-information">
    <div class="plant-details">
      <div class="show-task-title-card-hearder">
        <span class="span-paytone"><h4>WATERING</h4></span>
        <div class="padding-right">
          <img class="icons icons-task" src="/assets/watering.png" width="50" height="50" alt="watering">
        </div>
      </div>
        <p><span class="bold-green"><%= plant.watering_quantity %>cl</span> every <span class="bold-green"><%= plant.watering_frequency %></span> <%= "day".pluralize(plant.watering_frequency) %></p>
    </div>
  </div>
  <div class="task-title-card follow-up-card plant-information">
    <div class="plant-details">
      <div class="show-task-title-card-hearder">
        <span class="span-paytone"><h4>FERTILIZING</h4></span>
        <div class="padding-right">
          <img class="icons icons-task" src="/assets/fertilize.jpg" alt="fertilize" width="50" height="50">
        </div>
      </div>
      <p><span class="bold-green"><%= plant.fertilizing_quantity %>g</span> every <span class="bold-green"><%= plant.fertilizing_frequency %></span> <%= "day".pluralize(plant.fertilizing_frequency) %></p>
    </div>
    <!-- <p>Use <%#= plant.fertilizing_type %></p> -->
  </div>
